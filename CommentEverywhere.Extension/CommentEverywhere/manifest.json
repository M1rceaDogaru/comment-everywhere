{
  "manifest_version": 2,
  "name": "Comment Everywhere",
  "version": "1.0",

  "description": "Allows you to comment on any page on the internet.",

  "icons": {
    "48": "icons/ce-48.png"
  },

  "permissions": [
      "<all_urls>"
  ] ,

  "web_accessible_resources": [
    "icons/ce-48.png"
  ],

  "applications": {
    "gecko": {
      "id": "comment.everywhere@gmail.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["comment-everywhere.js"]
    }
  ]
}